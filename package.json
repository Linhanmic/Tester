{
  "name": "tester",
  "displayName": "Tester",
  "description": "Tester语言支持插件，用于CAN总线通信的开发、测试和调试。",
  "version": "0.0.6",
  "publisher": "Linhanmic",
  "author": {
    "name": "Linhanmic",
    "email": "linhanmic@qq.com",
    "url": "https://linhanmic.github.io/"
  },
  "license": "MIT",
  "repository": {
    "type": "github",
    "url": "https://github.com/Linhanmic/Tester.git"
  },
  "homepage": "https://github.com/Linhanmic/Tester#readme",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "files": [
    "out/**/*",
    "src/zlgcan"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tester",
        "aliases": [
          "Tester",
          "tester"
        ],
        "extensions": [
          ".tester",
          ".tst",
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tester",
        "scopeName": "source.tester",
        "path": "./syntaxes/tester.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tester",
        "path": "./snippets/tester.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tester-explorer",
          "title": "CAN Tester",
          "icon": "$(symbol-event)"
        }
      ]
    },
    "views": {
      "tester-explorer": [
        {
          "id": "tester.deviceStatus",
          "name": "设备状态",
          "type": "webview"
        },
        {
          "id": "tester.messageMonitor",
          "name": "报文监视",
          "type": "webview"
        },
        {
          "id": "tester.manualSend",
          "name": "手动发送",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "tester.runAllTests",
        "title": "Tester: 运行全部测试",
        "icon": "$(play)"
      },
      {
        "command": "tester.runTestSuiteByLine",
        "title": "Tester: 运行测试用例集",
        "icon": "$(play)"
      },
      {
        "command": "tester.runTestCaseByLine",
        "title": "Tester: 运行测试用例",
        "icon": "$(play)"
      },
      {
        "command": "tester.pauseExecution",
        "title": "Tester: 暂停执行",
        "icon": "$(debug-pause)"
      },
      {
        "command": "tester.resumeExecution",
        "title": "Tester: 继续执行",
        "icon": "$(debug-continue)"
      },
      {
        "command": "tester.stopExecution",
        "title": "Tester: 停止执行",
        "icon": "$(debug-stop)"
      },
      {
        "command": "tester.openDevice",
        "title": "Tester: 打开设备",
        "icon": "$(plug)"
      },
      {
        "command": "tester.closeDevice",
        "title": "Tester: 关闭设备",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "tester.toggleMonitorMode",
        "title": "Tester: 切换监视模式",
        "icon": "$(list-tree)"
      },
      {
        "command": "tester.clearMessages",
        "title": "Tester: 清空报文",
        "icon": "$(clear-all)"
      },
      {
        "command": "tester.sendMessage",
        "title": "Tester: 发送报文",
        "icon": "$(arrow-right)"
      },
      {
        "command": "tester.convertToRawScript",
        "title": "Tester: 转换为原始指令脚本",
        "icon": "$(symbol-keyword)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:native": "node-gyp rebuild && npm run copy:native",
    "build:native:debug": "node-gyp rebuild --debug && npm run copy:native:debug",
    "clean:native": "node-gyp clean",
    "copy:native": "node -e \"require('fs').copyFileSync('build/Release/zlgcan.node', 'src/zlgcan/lib/zlgcan.node')\"",
    "copy:native:debug": "node -e \"require('fs').copyFileSync('build/Debug/zlgcan.node', 'src/zlgcan/lib/zlgcan.node')\"",
    "test:zlgcan": "npx ts-node test/zlgcan.test.ts",
    "package:extension": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "~1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.5.0"
  }
}